<?xml version="1.0" encoding="UTF-8"?>
<log4php:configuration xmlns:log4php="http://logging.apache.org/log4php/" threshold="all">
    
    <!--Appender logs message to a file-->
    <appender name="default-appender" class="LoggerAppenderDailyFile">
                <!--Layout of the message-->
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%d{Y-m-d H:i:s} [%-5p] [%c] [%X{username}]: %m in %F at %L%n" />
        </layout>
        <param name="file" value="/var/log/creativelights.in/creativelights-%s.log" /> <!-- This is the log file-->
        <param name="append" value="true" />
        <param name="datePattern" value="Y-m-d" />
    </appender>

    <root>
        <level value="INFO" />
        <appender_ref ref="default-appender" />
    </root>
    
    <!--Logger used for logging-->
    <logger name="default-logger">
        <level value="INFO" /> <!--Severity level-->
        <appender_ref ref="default-appender" /> <!--Reference to the Appender-->
    </logger>
    
    <logger name="dev-logger">
        <level value="DEBUG" /> <!--Severity level-->
        <appender_ref ref="default-appender" /> <!--Reference to the Appender-->
    </logger>
    
    <logger name="test-logger">
        <level value="INFO" /> <!--Severity level-->
        <appender_ref ref="default-appender" /> <!--Reference to the Appender-->
    </logger>
    
    <logger name="prod-logger">
        <level value="ERROR" /> <!--Severity level-->
        <appender_ref ref="default-appender" /> <!--Reference to the Appender-->
    </logger>

</log4php:configuration>